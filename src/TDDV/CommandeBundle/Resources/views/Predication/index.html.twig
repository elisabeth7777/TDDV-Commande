{% extends '::layout.html.twig' %}
{% block header_body -%}
    <h1>Liste des Prédications</h1>
{% endblock %}
{% block body -%}
    <p><a class="btn btn-lg btn-primary" href="{{ path('predication_new') }}"><i class="fa fa-plus-circle"></i> Ajouter une nouvelle prédication</a></p>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date Shalom</th>
                <th>Date TDDV</th>
                <th>Prédicateur</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('predication_show', { 'id': entity.id }) }}">{{ entity.message.numeroCd }}</a></td>
                <td>{% if entity.message.dateShalom %}{{ entity.message.dateShalom|date('d/m/Y') }} {{entity.message.typeDateShalom|upper }}{% endif %}</td>
                <td>{% if entity.message.dateTDDV %}{{ entity.message.dateTDDV|date('d/m/Y') }} {{entity.message.typeDateTDDV|upper }}{% endif %}</td>
                <td>{{ entity.message.predicateur.infos }}</td>
                <td>{{ entity.message.titre }}</td>            
                <td>{{ entity.message.type|upper }}</td>
                <td>{{ entity.prix }}</td>
                <td>
                    <div class="col-xs-4">
                        <a href="{{ path('predication_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>
                    </div>
                    <div class="col-xs-4">
                        <a href="{{ path('predication_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>
                    </div>
                    <div class="col-xs-4">
                        <a href="{{ path('predication_erase', { 'id': entity.id }) }}"><i class="fa fa-eraser"></i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
