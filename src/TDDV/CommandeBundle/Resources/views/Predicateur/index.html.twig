{% extends "::layout.html.twig" %}

{% block header_body -%}
    <h1>Liste des Prédicateurs</h1>
{% endblock %}
    
{% block body -%}
    <p><a class="btn btn-lg btn-primary" href="{{ path('predicateur_new') }}"><i class="fa fa-plus-circle"></i> Ajouter un nouveau prédicateur</a></p>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('predicateur_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom|upper }}</td>
                <td>{{ entity.prenom|capitalize }}</td>
                <td>
                    <div class="col-xs-4">
                        <i class="fa fa-eye"></i><a href="{{ path('predicateur_show', { 'id': entity.id }) }}"> Détails</a>
                    </div>
                    <div class="col-xs-4">
                        <i class="fa fa-edit"></i><a href="{{ path('predicateur_edit', { 'id': entity.id }) }}"> Modifier</a>
                    </div>
                    <div class="col-xs-4">
                        <i class="fa fa-eraser"></i><a href="{{ path('predicateur_erase', { 'id': entity.id }) }}"> Supprimer</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
