{% extends '::layout.html.twig' %}
{% block header_body -%}
    <h1>Commande list</h1>
{% endblock %}
    
{% block body -%}
    <p><a class="btn btn-lg btn-primary" href="{{ path('commande_new') }}"><i class="fa fa-plus-circle"></i> Nouvelle Commande</a></p>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Total</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('commande_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.date %}{{ entity.date|date('d-m-Y') }}{% endif %}</td>
                <td>{{ entity.total }} €</td>
                <td>{% if entity.fait %}
                        {% if entity.livre %}
                            Livré
                        {% else %}
                            Non Livré
                        {% endif %}
                    {% else %}
                       A faire
                    {% endif %}
                </td>
                <td>
                    <div class="col-xs-4">
                        <i class="fa fa-eye"></i><a href="{{ path('commande_show', { 'id': entity.id }) }}"> Détails</a>
                    </div>
                    <div class="col-xs-4">
                        <i class="fa fa-edit"></i><a href="{{ path('commande_edit', { 'id': entity.id }) }}"> Modifier</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
